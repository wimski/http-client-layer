{
    "name": "wimski/http-client-layer",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "myclabs/php-enum": "^1.8",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Wimski\\HttpClient\\": "src"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "phpstan": "@php vendor/phpstan/phpstan/phpstan analyse --memory-limit 1G"
    }
}
